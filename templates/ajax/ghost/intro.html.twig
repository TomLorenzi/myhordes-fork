{% extends "ajax/ajax.html.twig" %}
{% block ajax %}
    <div class="row">
        <div class="cell padded header rw-12">
            <h4>{% trans from 'ghost' %}WÃ¤hle eine Stadt{% endtrans %}</h4>
            <div class="row">
                <div class="cell rw-8 rw-md-12">
                    {% for townClass in townClasses %}
                        <p>
                            <b>{{ townClass.getLabel }}</b><br />
