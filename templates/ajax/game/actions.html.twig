{% if list|length > 0 %}
    <ul class="actions">
        {% for entry in list %}
            <li class="action" {% if entry.crossed %}disabled{% else %}x-action-id="{{ entry.action.id }}" x-provoking-id="{{ entry.item.id }}"{% endif %}>
                <img src="{{ asset('build/images/item/item_' ~ entry.item.prototype.icon ~ '.gif') }}" alt="{{ entry.item.prototype.label|trans({},'items') }}">
                <span>{{ entry.action.label }}: <b>{{ entry.item.prototype.label|trans({},'items') }}</b></span>
            </li>
        {% endfor %}
    </ul>
{% endif %}
