<ul class="inventory {% block class %}{% endblock %}">
    {% if bankmode is not defined or not bankmode %}
        <li class="title">{% block title %}{% endblock %}</li>
        {% for item in fake_items %}
            <li class="item locked"><img src="{{ asset('build/images/item/fake_' ~ item.prototype.icon ~ '.gif') }}" alt="{{ item.prototype.label|trans({},'items') }}"></li>
        {% endfor %}
        {% for item in items %}
            <li class="item" x-item-id="{{ item.id }}"><img src="{{ asset('build/images/item/item_' ~ item.prototype.icon ~ '.gif') }}" alt="{{ item.prototype.label|trans({},'items') }}"></li>
        {% endfor %}
        {% if items|length < size %}
            {% for i in range(0, size - items|length - 1) %}
                <li class="free"></li>
            {% endfor %}
        {% endif %}
    {% else %}
        {% for category,list in items %}
            <li class="category">{{ category|trans({},'items') }}</li>
            {% for entry in list %}
                <li class="item {% if entry.count > 1 %}counted{% endif %}" x-item-id="{{ entry.item.id }}">
                    <img src="{{ asset('build/images/item/item_' ~ entry.item.prototype.icon ~ '.gif') }}" alt="{{ entry.item.prototype.label|trans({},'items') }}">
                    {% if entry.count > 1 %}<span>{{ entry.count }}</span>{% endif %}
                </li>
            {% endfor %}
        {% endfor %}

    {% endif %}
</ul>