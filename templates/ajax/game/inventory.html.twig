<ul class="inventory {% block class %}{% endblock %}">
    <li class="title">{% block title %}{% endblock %}</li>
    {% for item in fake_items %}
        <li class="item locked"><img src="{{ asset('build/images/item/fake_' ~ item.prototype.icon ~ '.gif') }}" alt="{{ item.prototype.label }}"></li>
    {% endfor %}
    {% for item in items %}
            <li class="item" x-item-id="{{ item.id }}"><img src="{{ asset('build/images/item/item_' ~ item.prototype.icon ~ '.gif') }}" alt="{{ item.prototype.label }}"></li>
    {% endfor %}
    {% if items|length < size %}
        {% for i in range(0, size - items|length - 1) %}
            <li class="free"></li>
        {% endfor %}
    {% endif %}
</ul>